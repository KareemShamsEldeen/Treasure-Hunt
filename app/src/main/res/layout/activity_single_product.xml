<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleProductActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorTertiary">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSecondaryVariant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            app:icon="@drawable/baseline_keyboard_backspace_24"
                            app:iconTint="?attr/colorOnSecondary" />
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end"
                            android:layout_weight="1.1">

                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end"
                            android:layout_marginRight="0dp"
                            android:layout_weight="3">

                            <ImageView
                                android:id="@+id/cartButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/__menu_3" />

                            <TextView
                                android:id="@+id/count"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/circle"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:text="1"
                                android:layout_marginTop="25dp"
                                android:layout_marginLeft="15dp"
                                android:textSize="10sp" />

                        </FrameLayout>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/pcat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
                        android:text="Category"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Green Armchair "
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/pImage"
                            android:layout_width="260dp"
                            android:layout_height="260dp"
                            android:layout_gravity="right"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginLeft="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="50dp"
                                android:text="from"
                                android:textSize="20dp"
                                android:textColor="?attr/colorOnSurface"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/pprice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="$289.99"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="60dp"
                                android:text="Color"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/pcolor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="Green"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="22dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:text="Quantity"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/quantity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="25dp"
                                android:gravity="left"
                                android:text="25"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="22dp"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>


            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="?attr/colorOnTertiary"
                android:gravity="left"
                android:textSize="22dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/desp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="sdoifhsdfoihsdfoisdhfoisdhfiosdhfaiosdfksdnhfjklssdoifhsdfoihsdfoisdhfoisdhfiosdhfaiosdfksdnhfjklssdoifhsdfoihsdfoisdhfoisdhfiosdhfaiosdfksdnhfjkls"
                android:textSize="18dp"
                android:textColor="?attr/colorOnTertiary"
                android:textStyle="bold" />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textColor="?attr/colorOnTertiary"
                android:gravity="left"
                android:textSize="22dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/size"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="sdoifhsdfoihsdfoisdhfoisdhfiosdhfaiosdfksdnhfjklssdoifhsdfoihsdfoisdhfoisdhfiosdhfaiosdfksdnhfjklssdoifhsdfoihsdfoisdhfoisdhfiosdhfaiosdfksdnhfjkls"
                android:textSize="18dp"
                android:textColor="?attr/colorOnTertiary"
                android:textStyle="bold" />


            -->//////////////////////////////////
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="45dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sold by"
                android:textColor="?attr/colorOnTertiary"
                android:gravity="left"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/sname"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Ahmed"
                android:textSize="18dp"
                android:textColor="?attr/colorOnTertiary"
                android:textStyle="bold" />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textColor="?attr/colorOnTertiary"
                android:gravity="left"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/sphone"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="0104563463645"
                android:textSize="18dp"
                android:textColor="?attr/colorOnTertiary"
                android:textStyle="bold" />


            -->//////////////////////////////////
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="?attr/colorOnTertiary"
                android:gravity="left"
                android:textSize="22dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/plocation"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="30.002758652588405, 31.175337475465895"
                android:textSize="20dp"
                android:textColor="?attr/colorOnTertiary"
                android:textStyle="bold" />


            <Button
                android:id="@+id/addcart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:text="ADD TO CART"
                android:textSize="20dp"/>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>