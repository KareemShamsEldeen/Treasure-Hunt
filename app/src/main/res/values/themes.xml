<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TreasureHunt"  parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/mainTeal</item>
        <item name="colorPrimaryVariant">@color/mainTeal_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/mainTeal</item>
        <item name="colorSecondaryVariant">@color/secYellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorTertiary">@color/white</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/mint_teal</item>
        <item name="colorSurfaceVariant">@color/mainYellow</item>
        <item name="colorOnSurface">@color/dark_grey</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/dm_sans</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textColorHint">@color/semi_trans_grey</item>


        <item name="android:button">@style/AppButton</item>

        <item name="android:statusBarColor">@color/mainTeal_darker</item>

        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40dp</item>
    </style>

    <color name="background">@color/mainYellow</color>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!--Calender Background color -->
        <item name="android:windowBackground">#20BEBB</item>
        <item name="colorAccent">@color/mainTeal</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <!-- Alert Dialog Theme -->
    <style name="AlertDialogCustom" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:textColorPrimary">@color/mainTeal</item>
        <item name="android:textColorSecondary">@color/light_black</item>
        <item name="android:background">#20BEBB</item>
    </style>

    <style name="Theme.TreasureHunt" parent="Base.Theme.TreasureHunt"  />
</resources>
